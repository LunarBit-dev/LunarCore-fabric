pipeline {
  agent any

  tools {
    jdk 'jdk21'
    maven 'maven'
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build') {
      steps {
        sh 'mvn clean package'
      }
    }
  }

  post {
    success {
      echo 'Build Successful'
    }
    failure {
      echo 'Build failed'
    }
  }
}
